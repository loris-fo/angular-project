<!DOCTYPE html>
<html lang="en" ng-app="GitUserSearch">
  <head>
    <meta charset="utf-8">
    <title>Github user search</title>
    <link rel="stylesheet" href="/bower_components/bootstrap/dist/css/bootstrap.css">
    <script src="/bower_components/jquery/dist/jquery.js"></script>
    <script src="/bower_components/angular/angular.js"></script>
    <script src="/bower_components/angular-resource/angular-resource.js"></script>
    <script src="/js/app.js"></script>
    <script src="/js/gitUserSearchController.js"></script>
    <script type="/css/main.css"></script>
  </head>

  <body ng-controller="GitUserSearchController">
    <div>
    <br><br>
      <form class="form-horizontal">
      <center>
        <input class="search-box" type="text" ng-model="searchTerm" ng-change="doSearch()" ng-model-options="{ updateOn: 'default blur', debounce: {'default': 500, 'blur': 0} }">
        <button class="btn" ng-click="doClear()">Clear</button>
      </center>
      </form>
      <ul class="list-group" ng-repeat="user in searchResult.items">
        <li>
          <img ng-src="{{user.avatar_url}}" height="100" width="100">
          <br>
          <a ng-href="{{user.html_url}}">{{user.login}}</a>
          Repos: {{username.public_repos}}
          Followers: {{username.followers}}
        </li>
        <li>
          </li>
      </ul>
    </div>
  </body>
</html>
